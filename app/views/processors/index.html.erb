<h1>Listing processors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date submitted</th>
      <th>Approved</th>
      <th>Date approved</th>
      <th>Current rates</th>
      <th>Bank 1</th>
      <th>Bank 2</th>
      <th>Monthly amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @processors.each do |processor| %>
      <tr>
        <td><%= processor.name %></td>
        <td><%= processor.date_submitted %></td>
        <td><%= processor.approved %></td>
        <td><%= processor.date_approved %></td>
        <td><%= processor.current_rates %></td>
        <td><%= processor.bank_1 %></td>
        <td><%= processor.bank_2 %></td>
        <td><%= processor.monthly_amount %></td>
        <td><%= link_to 'Show', processor %></td>
        <td><%= link_to 'Edit', edit_processor_path(processor) %></td>
        <td><%= link_to 'Destroy', processor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

