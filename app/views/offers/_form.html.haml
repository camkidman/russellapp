= simple_form_for [@user, @offer] do |f|
  - if @offer.errors.any?
    #error_explanation
      %h2
        = pluralize(@offer.errors.count, "error")
        prohibited this offer from being saved:
      %ul
        - @offer.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :website
    %br
    = f.text_field :website
  .field
    = f.label :whos_offer
    %br
    = f.text_field :whos_offer
  .field
    = f.label :fulfillment
    %br
    = f.text_field :fulfillment
  .field
    = f.label :trial
    %br
    = f.text_field :trial
  .field
    = f.label :customer_support_phone
    %br
    = f.text_field :customer_support_phone
  .field
    = f.label :customer_support_email
    %br
    = f.text_field :customer_support_email
  .field
    = f.label :fax_number
    %br
    = f.text_field :fax_number
  .field
    = f.label :hours_of_operation
    %br
    = f.text_field :hours_of_operation
  .field
    = f.label :description
    %br
    = f.text_field :description
    = f.hidden_field :user_id, value: @user.id
  .actions
    = f.submit