<h1>Listing offers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>Whos offer</th>
      <th>Fulfillment</th>
      <th>Trial</th>
      <th>Customer support phone</th>
      <th>Customer support email</th>
      <th>Fax number</th>
      <th>Hours of operation</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.name %></td>
        <td><%= offer.website %></td>
        <td><%= offer.whos_offer %></td>
        <td><%= offer.fulfillment %></td>
        <td><%= offer.trial %></td>
        <td><%= offer.customer_support_phone %></td>
        <td><%= offer.customer_support_email %></td>
        <td><%= offer.fax_number %></td>
        <td><%= offer.hours_of_operation %></td>
        <td><%= offer.description %></td>
        <td><%= link_to 'Show', offer %></td>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offer', new_offer_path %>
